<?xml version="1.0"?>
<package format="2">
	<name>cob_table_object_cluster</name>
	<version>1.0.0</version>

	<description>
		Nodes for segmenting objects on a table.
	</description>

	<license>LGPL</license>

	<maintainer email="goa@ipa.fhg.de">Georg Arbeiter</maintainer>
	<author>Georg Arbeiter</author>

	<url>http://wiki.ros.org/cob_table_object_cluster</url>

	<buildtool_depend>catkin</buildtool_depend>

	<depend>actionlib</depend>
	<depend>boost</depend>
	<depend>cob_3d_mapping_common</depend>
	<depend>cob_3d_mapping_msgs</depend>
	<depend>cob_object_detection_msgs</depend>
	<depend>cob_perception_msgs</depend>
	<depend>cob_vision_utils</depend>
	<depend>dynamic_reconfigure</depend>
	<depend>eigen_conversions</depend>
	<!--depend>libpcl-all-dev</depend-->
	<depend>nodelet</depend>
	<depend>pcl_ros</depend>
	<depend>roscpp</depend>
	<depend>std_srvs</depend>
	<depend>tf_conversions</depend>

	<export>
		<nodelet plugin="${prefix}/nodelet_plugins.xml" />
	</export>
</package>


